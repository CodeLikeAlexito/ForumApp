@model Forum.ViewModels.ForumViewModel

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.2.1.min.js"></script>

<br />
<div class="container">
    <h1 class="text-center">My Forum</h1>
</div>
<br />
<div class="container text-center">
    <a asp-controller="Topic" asp-action="New" class="btn btn-info">Create new topic</a>
</div>
<br />
<div>
    <div>
        <ol>
            @foreach (var topic in Model.Topics)
            {
                <div class="container border">
                    <br />
                    <div class="container">
                        <span class="border">Topic: @topic.Title </span>
                        <span class="border">Date created: @topic.DateCreated </span>
                        <span class="border">User: @topic.UserId</span>
                    </div>
                    <div class="container">
                        <span>Topic description: </span>
                        <span>@topic.Description</span>
                    </div>

                    <form asp-controller="Comment" asp-action="AddComment">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <a id="addCommentBtn" class="btn btn-success btn-sm">Add comment</a>
                        <div id="addCommentSection">
                            <p>Here you can add your comment..</p>
                            <div class="form-group">
                                <input type="hidden" id="commentId" asp-for="Comment.CommentId" />
                                <input type="hidden" id="commentDateCrt" asp-for="Comment.DateCreated" />
                                <input type="hidden" id="commentDateMod" asp-for="Comment.DateModified" />
                                <input type="hidden" id="commentTopicId" asp-for="Comment.TopicId" />
                                <input type="hidden" id="commentUserId" asp-for="Comment.UserId" />
                                <input type="hidden" id="commentUserName" asp-for="Comment.UserName" />
                                <label asp-for="Comment.Text" class="control-label"></label>
                                <input id="commentTxt" asp-for="Comment.Text" class="form-control" />
                                <span asp-validation-for="Comment.Text" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="button" value="Save" id="Save" class="btn btn-danger btn-sm" value="Add" />
                            </div>
                        </div>
                        @foreach (var comment in Model.Comments)
                        {
                            @if (comment.TopicId == topic.TopicId)
                            {
                                @comment.Text
                            }
                            <div>
                                @foreach (var replay in Model.Replays)
                                {
                                    @if (replay.CommentId == comment.CommentId && comment.TopicId == topic.TopicId)
                                    {
                                        @replay.ReplayDescription
                                    }
                                }
                            </div>
                        }
                    </form>
                    <br />
                </div>

            }
        </ol>
    </div>
    <ol>
    </ol>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        $(function () {
            $('#Save').click(function () {
                console.log('click');
                var comment = new Object();
                comment.CommentId = $('#commentId');
                comment.Text = $('#commentTxt').val();
                console.log(comment);
                $.ajax({
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(comment),
                    url: "/Comment/AddComment",
                    dataType: "json",
                    success: function (data) {
                        alert("a");
                    },
                    error: function (result) {
                        alert("Error");
                    }
                })
            })
        })
    </script>


}

